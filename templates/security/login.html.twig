{% extends 'base.html.twig' %}

{% block title %} - Connexion{% endblock %}

{% block body %}

    {% for flash in app.flashes('flash') %}
        {{ flash }}
    {% endfor %}

    <section class="form">
        <h2>Connexion</h2>

        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <span>Votre pseudo</span>
                <input placeholder="Pseudo" type="text" class="form-control" required name="_username">
                <span>Votre mot de passe</span>
                <input placeholder="Mot de passe" type="password" class="form-control" required name="_password">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-primary">connection</button>
            </div>
        </form>

        <a href="{{ path('forgot-pass') }}">Mot de passe oublier ?</a>
    </section>
{% endblock %}
