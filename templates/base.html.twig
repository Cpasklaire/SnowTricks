<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>SnowTricks
			{% block title %}{% endblock %}
		</title>

		<link rel="icon" href="/pictures/icon.png">
		<link href="https://bootswatch.com/5/sketchy/bootstrap.min.css" rel="stylesheet"/>
    <link href="/style.css" rel="stylesheet"/>
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		<script src="/app.js"></script>

	</head>

	<body>
		<header class="header">
			<a href="/" class="logo"><h1>SnowTricks</h1></a>
			<input class="menu-btn" type="checkbox" id="menu-btn" />
			<label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
			<ul class="menu">
				{% if not app.user %}
					<li>
						<a href="{{ path('registration') }}">S'inscrire</a>
					</li>
					<li>
						<a href="{{ path('login') }}">Se connecter</a>
					</li>
				{% else %}
					<li>
						<a href="{{ path('newTrick') }}">Ajouter un trick</a>
					</li>
					<li>
						<a href="{{ path('logout') }}">DÃ©connection</a>
					</li>
				{% endif %}
			</ul>
		</header>

    	{% for flash in app.flashes('flash') %}
		<div class="flash">
		{{ flash }}
		</div>
		{% endfor %}		
		{% block body %}{% endblock %}
	</body>
</html>
