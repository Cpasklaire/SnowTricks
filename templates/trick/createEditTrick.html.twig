{% extends 'base.html.twig' %}

{% form_theme formTrick 'bootstrap_5_layout.html.twig' %}

{% block title %} - Créer un trick{% endblock %}

{% block body %}
  {{ form_start(formTrick) }}

    {{ form_row(formTrick.name, {'attr': {'placeholder': 'Nom de la figure'}}) }}
    {{ form_row(formTrick.content, {'attr': {'placeholder': 'Description de la figure'}}) }}
    {{ form_row(formTrick.category) }}

    <button type="submit" class="btn btn-primary">
      {% if editMode %}
          Modifier
      {% else %}
          Créer
      {% endif %}
    </button>

  {{ form_end(formTrick) }}
{% endblock %}
